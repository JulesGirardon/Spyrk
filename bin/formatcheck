#!/bin/bash

# Répertoires à formater
TARGETS="app tests"

echo "=== Lancement de black (formatage automatique) ==="
black $TARGETS
EXIT_CODE=$?

echo

if [ $EXIT_CODE -eq 0 ]; then
  echo "black : Code correctement formaté ✅"
else
  echo "black : Des fichiers ont été reformatés ❗"
fi

exit $EXIT_CODE
